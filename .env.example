# Variables d'environnement pour Vercel
NODE_ENV=production
PORT=3000

# Base de données PostgreSQL (à configurer sur Vercel)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Secrets JWT et Cookies
JWT_SECRET=supersecret_change_in_production
COOKIE_SECRET=supersecret_change_in_production

# CORS Configuration
STORE_CORS=http://localhost:8000,https://your-storefront.vercel.app
ADMIN_CORS=http://localhost:7001,http://localhost:9000,https://your-admin.vercel.app
AUTH_CORS=http://localhost:7001,http://localhost:9000,https://your-admin.vercel.app

# Stripe Configuration (vos vraies clés)
STRIPE_API_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Redis (optionnel pour Vercel)
REDIS_URL=redis://localhost:6379
